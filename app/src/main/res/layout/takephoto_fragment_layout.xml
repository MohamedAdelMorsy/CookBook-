<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/take_photo_fragment_breakground"
    android:orientation="vertical"
    android:padding="50dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/takephoto_take_photo_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/final_take_photo_fragment_button"
            android:text="@string/takephoto_takephoto_button_text"/>
    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


</LinearLayout>